{
  "buildCommand": "cd school-notice-app && npm ci && npm run build",
  "outputDirectory": "school-notice-app/dist",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}