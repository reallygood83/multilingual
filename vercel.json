{
  "version": 2,
  "builds": [
    {
      "src": "school-notice-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/school-notice-app/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "/api"
  },
  "buildCommand": "cd school-notice-app && npm install && npm run build",
  "outputDirectory": "school-notice-app/dist"
}